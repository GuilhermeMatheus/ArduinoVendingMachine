@model IEnumerable<VendingMachine.Core.Model.ClientCard>

@{
    ViewBag.Title = "Index";
}

<h2>Cartões</h2>

<p>
    @Html.ActionLink("Cadastrar novo cartão", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Rfid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Alias)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Credit)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Rfid)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Alias)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Credit)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.Rfid }) |
            @Html.ActionLink("Detalhes", "Details", new { id = item.Rfid }) |
            @Html.ActionLink("Apagar", "Delete", new { id = item.Rfid })
        </td>
    </tr>
}

</table>
